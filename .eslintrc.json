{
  "env": {
    "browser": true,
    "jest": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "experimentalDecorators": true,
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "no-console": "off",
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "linebreak-style": ["error", "unix"],
    "no-trailing-spaces": "error",
    "no-var": "error",
    "quotes": [
      "error",
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    "semi": ["error", "always"],
    "no-prototype-builtins": "warn"
  },
  "overrides": [
    {
      "files": ["config/**/*.json*"],
      "rules": {
        "quotes": ["error", "double", { "avoidEscape": true }]
      }
    }
  ]
}
